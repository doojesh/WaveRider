<!DOCTYPE html>
<html lang="en">
  <head>
    <title>My Wishlist</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap"
      rel="stylesheet"
    />
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body class="page-with-bg">
    <%- include("../partials/header") %>
    <br /><br />
    <hr class="white-line" />

    <div class="container mt-5">
      <h2 class="text-center text-white mb-4">My Wishlist</h2>

      <% if (wishlistItems.length === 0) { %>
      <p class="text-white text-center">Your wishlist is empty.</p>
      <% } else { %>
      <div class="row">
        <% wishlistItems.forEach(item => { const service = item.serviceId; %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow">
            <img
              src="<%= service.image %>"
              class="card-img-top"
              alt="<%= service.description %>"
            />
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title"><%= service.code %></h5>
                <p class="card-text"><%= service.description %></p>
                <p class="fw-bold text-primary">Rs <%= service.price %></p>
              </div>

              <!-- Side-by-side buttons -->
              <div class="mt-3">
                <div class="row gx-2">
                  <div class="col-6">
                    <form
                      action="/wishlist/remove/<%= service._id %>"
                      method="POST"
                    >
                      <button
                        type="submit"
                        class="btn btn-outline-danger w-100"
                      >
                        Remove
                      </button>
                    </form>
                  </div>
                  <div class="col-6">
                    <form action="/book/<%= service._id %>" method="GET">
                      <button
                        type="submit"
                        class="btn btn-outline-success w-100"
                      >
                        Book Now
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>

    <%- include("../partials/footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
